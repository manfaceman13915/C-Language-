#include <iostream>
#include <string>
using namespace std;

int main(){
  int s, f, pp, ri; // s = snack, f = friend, pp = perPerson, ri = remaining
  cout << "Enter snack = ";
  cin >> s;

  cout << "Enter friends = ";
  cin >> f;

  pp = s / f;
  ri = s % f;

  cout << "ได้คนละ " << pp << "ชิ้นที่เหลือเศษ" << ri << " ชิ้น";
}
